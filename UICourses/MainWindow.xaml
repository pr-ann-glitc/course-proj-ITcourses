<Window x:Class="UICourses.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UICourses"
        mc:Ignorable="d"
        Title="For admin" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Content="Название" Grid.Row="0" VerticalAlignment="Center"/>
            <TextBox x:Name="NameTextBox" Margin="5" Grid.Row="0" Grid.Column="1" ToolTip="Введите название курса"
                     VerticalAlignment="Center"/>
            <Label Content="Выбор преподавателя" Grid.Row="1" VerticalAlignment="Center"/>
            <ComboBox x:Name="TeacherComboBox" Grid.Row="1" Grid.Column="1" Margin="5"
                      ToolTip="Выберите преподавателя" VerticalAlignment="Center">
                <ComboBoxItem Content="Виктория"/>
                <ComboBoxItem Content="Сергей"/>
                <ComboBoxItem Content="Илья"/>
                <ComboBoxItem Content="Анастасия"/>
                <ComboBoxItem Content="Борис"/>
                <ComboBoxItem Content="Ангелина"/>
                <ComboBoxItem Content="Евгений"/>
            </ComboBox>
            <Label Content="Длительность курса" Grid.Row="2" VerticalAlignment="Center"/>
            <TextBox x:Name="DurationTextBox" Margin="5" Grid.Column="1" Grid.Row="2"
                     ToolTip="Введите количество месяцев, сколько будет длиться курс"
                     VerticalAlignment="Center"/>
            <Label Content="Максимальное число учеников" Grid.Row="3" VerticalAlignment="Center"/>
            <TextBox x:Name="MaxTextBox" Grid.Row="3" Grid.Column="1" ToolTip="Введите максимальное количество учеников на курсе" Margin="5"
                    VerticalAlignment="Center" />
        </Grid>
        <StackPanel Grid.Row="1">
            <Button x:Name="CreateCourseButton" 
             Content="Создать курс"
                Height="50" Width="150"
                Margin="10" Click="CreateCourse"/>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="150">
                <TextBox Text="Созданные курсы:"
                    Name="info" IsReadOnly="True" TextWrapping="Wrap" 
                         VerticalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         Margin="10 0 10 10"/>
            </ScrollViewer>
        
        </StackPanel>
       
    </Grid>
</Window>
